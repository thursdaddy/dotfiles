[global]
    font = Hack 10
    frame_width = 2
    frame_color = "#5c5c5c"
    
    markup = yes
    
    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    # Markup is allowed
    format = "<b>%s</b>\n%b"
    
    sort = yes
    indicate_hidden = yes
    alignment = left 
    bounce_freq = 5
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    geometry = "700x20-12+30"
    shrink = yes
    transparency = 15
    idle_threshold = 120
    monitor = 0
    follow = mouse
    sticky_history = yes
    history_length = 20
    show_indicators = no
    line_height = 5
    separator_height = 5
    padding = 10
    stack_duplicates = true
    horizontal_padding = 20
    separator_color = auto 
    startup_notification = false
    dmenu = /usr/bin/rofi -dmenu -p dunst:
    browser = /usr/bin/google-chrome
    icon_position = left
    icon_path = /usr/share/icons/hicolor/16x16/apps/
    max_icon_size = 48

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+Return

