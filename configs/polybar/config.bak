### COLORS ###
[colors]
background = ${xrdb:color6}
background-alt = ${xrdb:color3} 
background-unf = ${xrdb:color6}

foreground = ${xrdb:color15} 
foreground-alt = ${xrdb:color15} 
foreground-unf = ${xrdb:color15}
foreground-foc = ${xrdb:color4} 
foreground-alrt = ${xrdb:color11} 
foreground-warn = ${xrdb:color11} 
#foreground-alrt = #db0707
#foreground-warn = #eecc04

### MAIN BAR ###
[bar/main]
monitor = ${env:MONITOR:}
width = 100%
height = 25
offset-x = 0
offset-y = 0
radius = 10.0
fixed-center = true
bottom = true 

font-0 = "Hack:fontformat=truetype:size=10;1"
font-1 = "Font Awesome 5 Free:style=Regularpixelsize=11;1"
font-2 = "Font Awesome 5 Free:style=Solid:pixelsize=11;1"
font-3 = "Noto Sans Symbols2:style=Regular:pixelsize=14;4"
font-4 = "FuraMono Nerd Font Mono:style=Regular:pixelsize=18;2"

modules-left = py_date weather
modules-center = i3 
modules-right = py_cpu pvolume backlight battery updates 

# sets bar to transparent 
background = #00000000
foreground = ${colors.foreground}

border-bottom-size = 0
border-top-size = 3
border-left-size = 5
border-right-size = 5
border-color = #00000000

padding-left = 1
padding-right = 1

module-margin-left = 1
module-margin-right = 1

tray-position = right
tray-padding = 4
tray-transparent = true 
tray-maxsize = 14
tray-detached = false
wm-restack = i3
#override-redirect = false

### SIDE BAR ###

[bar/side]
monitor = ${env:MONITOR:}
width = 100%
height = 30
offset-x = 0%
offset-y = 0%
radius = 0.0
fixed-center = true
bottom = true 

modules-left = py_date weather
modules-center = i3 
modules-right = battery backlight pvolume memory py_cpu 

# sets bar to transparent 
background = #00000000
foreground = ${colors.foreground}

padding-left = 1
padding-right = 1

module-margin-right = 1
module-margin-left = 1

font-0 = "Hack:fontformat=truetype:size=9;1"
font-1 = "Font Awesome 5 Free:style=Regularpixelsize=11;1"
font-2 = "Font Awesome 5 Free:style=Solid:pixelsize=11;1"
font-3 = "Noto Sans Symbols2:style=Regular:pixelsize=16;4"
font-4 = "FuraMono Nerd Font Mono:style=Regular:pixelsize=22;2"

wm-restack = i3

[bar/vert]
monitor = ${env:MONITOR:}
width = 100%
height = 30
offset-x = 0%
offset-y = 0%
radius = 0.0
fixed-center = true
bottom = true 

modules-left = date
modules-center = i3
modules-right = pvolume

# sets bar to transparent 
background = #00000000
foreground = ${colors.foreground}

padding-left = 1
padding-right = 1

module-margin-right = 1
module-margin-left = 1

font-0 = "Hack:fontformat=truetype:size=9;1"
font-1 = "Font Awesome 5 Free:style=Regularpixelsize=11;1"
font-2 = "Font Awesome 5 Free:style=Solid:pixelsize=11;1"
font-3 = "Noto Sans Symbols2:style=Regular:pixelsize=16;4"
font-4 = "FuraMono Nerd Font Mono:style=Regular:pixelsize=22;2"

wm-restack = i3
### MODULES ###

[module/i3]
type = internal/i3
index-sort = true
strip-wsnumbers = false
pin-workspaces = true

ws-icon-1 = 1;
ws-icon-0 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
#ws-icon-6 = 7;7
#ws-icon-7 = 8;8
#ws-icon-8 = 9;
ws-icon-9 = 0;

format = <label-state> <label-mode>

label-unfocused-foreground = ${colors.foreground-unf} 
label-mode = %mode%
label-mode-padding = 1
label-mode-background = ${colors.background}

label-focused = %icon%
label-focused-foreground = ${colors.foreground-foc} 
label-focused-padding = 1

label-unfocused = %icon%
label-unfocused-padding = 1 

label-visible = %icon%
label-visible-underline = #555555
label-visible-padding = 1

label-urgent = %icon%
label-urgent-foreground = ${colors.foreground-alrt}
label-urgent-padding = 1

[module/weather_icons]
type = custom/script
exec = ~/.config/scripts/weather_icons.py
interval = 600

[module/backlight]
type = internal/xbacklight
card = intel_backlight
format-prefix-foreground = ${colors.foreground-alt}
format = <label>
label = %percentage%%
output = eDP1
enable-scroll = true
format-prefix = " "
label-active = %token%

#[module/weather]
#type = custom/script
#interval = 5
#exec = ~/.config/scripts/utfweather.py
#click-left = ~/.config/scripts/utfweather.py -t
#click-right = ~/.config/scripts/utfweather.py -n

[module/weather]
type = custom/script
interval = 5
exec = ZIPCODE_CONNECTION_STRING=sqlite:////var/lib/zipcode/zip.db ~/.config/scripts/utfweather.py
click-left = ZIPCODE_CONNECTION_STRING=sqlite:////var/lib/zipcode/zip.db ~/.config/scripts/utfweather.py -t
click-right = ZIPCODE_CONNECTION_STRING=sqlite:////var/lib/zipcode/zip.db ~/.config/scripts/utfweather.py -n

label = %output%
format = <label>

[module/date]
type = internal/date
interval = 1
time = "%l:%M:%S %p"
time-alt = "%a, %b %d"

format-prefix-foreground = ${colors.foreground-foc}
label-active = %token%
format-padding = 1
label = %time%

[module/py_date]
type = custom/script
interval = 1
exec = ~/.config/scripts/py_date.py
click-left = ~/.config/scripts/py_date.py -t
click-right = ~/.config/scripts/py_date.py -n

[module/py_cpu]
type = custom/script
interval = 5
exec = "python3.6 ~/.config/scripts/py_cpu.py"
click-left = "python3.6 ~/.config/scripts/py_cpu.py -t"

[module/title]
type = internal/xwindow
format-background = ${colors.background}
format-foreground = ${colors.foreground}

[module/updates]
type = custom/script
exec = ~/.config/scripts/updates.sh
interval = 300
format = <label>
#label = "%output:0:30%"
#label-active = %token%
format-prefix-foreground = ${colors.foreground-alt}

[module/pvolume]
type = custom/script
interval = 1
label = %output%
exec = ~/.config/scripts/volume.sh
click-right = exec pavucontrol
click-left = ~/.config/scripts/volume.sh --togmute
scroll-up = ~/.config/scripts/volume.sh --up
scroll-down = ~/.config/scripts/volume.sh --down
format = <label>
format-prefix-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 100
format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
label-full = %percentage%

ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colors.foreground-alrt}
ramp-capacity-1 = 
ramp-capacity-1-foreground = ${colors.foreground-warn}
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.foreground-foc}
animation-charging-framerate = 750

#[module/weather]
#type = custom/script
#interval = 3600
##format = <label>
##format-prefix = "    "
##format-prefix-foreground = ${colors.foreground-alt}
#label-active = %token%
#label-actice-font = 2
#exec = ~/.config/scripts/weather_icons.py

[module/cpu]
type = internal/cpu
interval = 10
format-prefix = " " 
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage%%
label-foreground = ${colors.foreground}

[module/memory]
type = internal/memory
interval = 30
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage_used%%
label-foreground = ${colors.foreground}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-back2ground = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 0
margin-bottom = 0
